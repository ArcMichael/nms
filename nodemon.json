{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/"
    ],
    "verbose": true,
    "exec": "NODE_ENV=development && npx ts-node ./common/app.ts",
    "events": {
        "restart": [
            "echo 'nodemon restart'"
        ]
    },
    "watch": [
        "*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}